@page
@model _242034Y_FreshFarmMarket.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout";
}

<div class="container" style="max-width:600px; margin-top:40px;">
    <h2>Forgot Password</h2>
    <p class="text-muted">Enter your email and we will send you a reset link.</p>

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success">@TempData["Info"]</div>
    }

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success w-100">Send Reset Link</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
