<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fresh Farm Market</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Render page-specific styles -->
    @RenderSection("Styles", required: false)

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Head", required: false)
</head>
<body class="ffm-page">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-leaf me-2"></i>Fresh Farm Market
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @{
                        var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
                        var isLoginPage = currentPage == "/Login";
                        var isRegisterPage = currentPage == "/Register";
                    }

                    @if (!isLoginPage && !isRegisterPage)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Index" ? "active" : "")" href="/">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i>@User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="/ChangePassword">
                                        <i class="fas fa-key me-2"></i>Change Password
                                    </a>
                                </li>

                                <!-- ✅ 2FA with matching icon -->
                                <li>
                                    <a class="dropdown-item" href="/Enable2fa">
                                        <i class="fas fa-shield-halved me-2"></i>2FA Settings
                                    </a>
                                </li>

                                <!-- ✅ Admin-only Audit Logs -->
                                @if (User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a class="dropdown-item" href="/AuditLog">
                                            <i class="fas fa-history me-2"></i>Audit Logs
                                        </a>
                                    </li>
                                }

                                <li><hr class="dropdown-divider"></li>

                                <li>
                                    <form method="post" asp-page="/Logout">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        @if (!isLoginPage)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                        }

                        @if (!isRegisterPage)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Register">
                                    <i class="fas fa-user-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main" class="pb-3 ffm-main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-top footer text-muted bg-light ffm-footer">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h6><i class="fas fa-leaf me-2"></i>Fresh Farm Market</h6>
                    <p class="mb-0 small">Singapore's premier online marketplace for fresh, organic produce</p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="mb-0 small">
                        &copy; @DateTime.Now.Year - Fresh Farm Market
                        <span class="mx-2">|</span>
                        <a href="#" class="text-muted">Privacy Policy</a>
                        <span class="mx-2">|</span>
                        <a href="#" class="text-muted">Terms of Service</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery (if needed) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- Render page-specific scripts -->
    @RenderSection("Scripts", required: false)

    <!-- Custom Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
