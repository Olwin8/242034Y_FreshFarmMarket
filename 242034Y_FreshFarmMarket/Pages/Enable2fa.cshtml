@page
@model _242034Y_FreshFarmMarket.Pages.Enable2faModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
    Layout = "_Layout";
}

<div class="container" style="max-width:650px; margin-top:40px;">
    <h2>Two-Factor Authentication (2FA)</h2>
    <p class="text-muted">Enable 2FA to receive a one-time code by email during login.</p>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form method="post">
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="Enable" id="enable2fa">
            <label class="form-check-label" for="enable2fa">
                Enable Email 2FA
            </label>
        </div>

        <button type="submit" class="btn btn-success w-100">Save</button>
    </form>
</div>
